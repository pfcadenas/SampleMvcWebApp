@model IEnumerable<SampleWebApp.Models.TopWordsViewModels>

@{
    Layout = "";
}


@if (Model.Count() > 0)
{
    <h3>Tag Cloud</h3>

    foreach (var item in Model)
    {
        <a class="@item.GetTagClass()" style="color:forestgreen" href="/Posts/Index?content= @item.Word"> @item.Word &nbsp</a>  
    }
}